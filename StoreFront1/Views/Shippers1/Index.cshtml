@model IEnumerable<StoreFront.Data.EF.Shipper>


@{
    ViewBag.Title = "Index";
}

<div id="customwrap">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3">
            </div>
        </div>
    </div>
</div>

@if (Request.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShipperName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Zip)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShipperName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zip)
            </td>
            <td>

                @if (User.IsInRole("Admin"))
                {
                    @: @Html.ActionLink("Edit", "Edit", new { id = item.ShipperID }) |
                }

                @if (User.IsInRole("Admin"))
                {
                    @: @Html.ActionLink("Details", "Details", new { id = item.ShipperID }) |
                }

                @if (User.IsInRole("Admin"))
                {
                    @: @Html.ActionLink("Delete", "Delete", new { id = item.ShipperID })
                }

            </td>
        </tr>
    }

</table>
