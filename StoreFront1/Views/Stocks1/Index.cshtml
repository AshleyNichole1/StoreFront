@model IEnumerable<StoreFront.Data.EF.Stock>


@{
    ViewBag.Title = "Index";
}


<div id="customwrap">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3">
            </div>
        </div>
    </div>
</div>


@if (Request.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StockValue)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StockValue)
            </td>
            <td>
                @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                {
                    @: @Html.ActionLink("Edit", "Edit", new { id = item.StockID }) |
                }

                @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                {
                    @: @Html.ActionLink("Details", "Details", new { id = item.StockID }) |
                }

                @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                {
                    @: @Html.ActionLink("Delete", "Delete", new { id = item.StockID })
                }

            </td>
        </tr>
    }

</table>
