@model IEnumerable<StoreFront.Data.EF.Position>



@{
    ViewBag.Title = "Index";
}

<div id="customwrap">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3">
            </div>
        </div>
    </div>
</div>

<div id="contact">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                @if (Request.IsAuthenticated)
                {
                    <p>
                        @Html.ActionLink("Create New", "Create")
                    </p>
                }
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Position1)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Position1)
                                </td>
                                <td>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        @: @Html.ActionLink("Edit", "Edit", new { id = item.PositionID }) |
                                    }

                                    @if (User.IsInRole("Admin"))
                                    {
                                        @: @Html.ActionLink("Details", "Details", new { id = item.PositionID }) |
                                    }

                                    @if (User.IsInRole("Admin"))
                                    {
                                        @: @Html.ActionLink("Delete", "Delete", new { id = item.PositionID })
                                    }

                                </td>
                            </tr>
                        }

                    </table>
                </div>
        </div>
    </div>
</div>
